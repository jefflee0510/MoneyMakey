<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="bits.rmit.moneymakey4.Input">


    <EditText
        android:id="@+id/txtIncome"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:hint="  Insert your monthly income here"/>

    <ImageView
        android:id="@+id/imgAppLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/app_logo" />

    <TextView
        android:id="@+id/txtSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtIncome"
        android:layout_alignStart="@+id/txtIncome"
        android:layout_below="@+id/txtIncome"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:fontFamily="casual"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtPercentageInput"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/txtSave"
        android:layout_alignStart="@+id/txtSave"
        android:layout_below="@+id/txtSave"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtPercentageInput"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/txtPercentageInput"
        android:fontFamily="casual"
        android:text="%"
        android:textStyle="bold"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPercentageInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:text="Calculate"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>